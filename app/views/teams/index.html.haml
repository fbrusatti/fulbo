%h1 Teams

- if user_signed_in? and !current_user.team.blank?
  = button_to "my team", team_path(current_user.team), {:method => :get, :class => "btn btn-mini btn-info", :type => "button"}
- if user_signed_in? and current_user.team.blank?
  = button_to "create a team", new_team_path, {:method => :get, :class => "btn btn-mini btn-primary", :type => "button"}
- if !user_signed_in?
  = button_to "create a team", "#", {:method => :get, :class => "btn btn-mini btn-primary disabled", :type => "button"}

%table{:class => "table table-striped"}
  - for team in @teams
    %tr
      %td
        %div{:class => "media"}
          %a{:class => "pull-left", :href => "#"}
            %img{:class => "media-object", "data-src" => "holder.js/64x64"}
          %div{:class => "media-body"}
            %h4{:class => "media-heading"}=link_to "#{team.name}", team
      %td
        %div{:class => "btn-group"}
          %a{:class => "btn dropdown-toggle", "data-toggle" => "dropdown", :href => "#"}
            Action
            %span{:class => "caret"}
          %ul{:class => "dropdown-menu", :role => "menu", "aria-labelledby" => "dropdownMenu"}
            %li
              %a{:tabindex => "-1", :href =>"#"}
                Oganizar partido
            %li
              %a{:tabindex => "-1", :href =>"#"}
                Unirme a este equipo    