.row-fluid
  .span12
    .hero-unit
      .text-center
        %h3= t(".title")
    = form_for @league do |f|
      = render 'form', f: f

      = f.submit "Guardar", :class => "btn"

    .row-fluid
      .span4
        .text-center
          %h4= t(".my_teams_table")
        = render "edit_teams_table", collection: @teams, action: "remove"
      .span4
      .span4
        .text-center
          %h4= t(".teams_table")
        = render "edit_teams_table", collection: @inscription_requests, action: "affiliate"
