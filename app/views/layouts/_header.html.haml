%header.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      = link_to "Fulbo", root_path, id: "logo"
      %nav
        %ul.nav.pull-right
          %li= link_to "Ligas", '#'
          %li= link_to "Equipos", teams_path
          %li= link_to "Estadios", '#'
          - if user_signed_in?
            %li
              Signed in as #{current_user.email}. Not you?
            %li= link_to "Profile", user_profile_path(current_user)
            %li= link_to "Salir", destroy_user_session_path, method: 'delete'
          - else
            %li= link_to "Registrarse", new_user_registration_path
            %li= link_to "Entrar", new_user_session_path